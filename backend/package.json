{
  "name": "voltride-backend",
  "version": "1.0.0",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "start": "node dist/infrastructure/express/server.js",
    "build": "tsc",
    "dev": "tsc && node dist/infrastructure/express/server.js",
    "prisma:generate:postgres": "prisma generate --schema prisma/postgres/schema.prisma",
    "prisma:migrate:postgres": "prisma migrate dev --schema prisma/postgres/schema.prisma --name",
    "prisma:pull:mongo": "prisma db pull --force --schema prisma/mongo/schema.prisma",
    "prisma:generate:mongo": "prisma generate --schema prisma/mongo/schema.prisma",
    "prisma:push:mongo": "prisma db push --schema prisma/mongo/schema.prisma"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.10.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "twilio": "^5.4.5",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@prisma/client": "^6.4.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.17.19",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "3.4.2",
    "prisma": "^6.4.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
